        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/marginsStyle">

            <io.github.kexanie.library.MathView
                android:id="@+id/mvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
